<h2>Customers</h2>
<div class="row g-3">
  <% for (let cust of customers) { %>

    <div class="col-4">
      <div class="card p-1">
        <h5 class="card-title"><%= cust.legal_entity_name %></h5>
        <div class="card-text">
          <div><%= cust.type %> / <%= cust.industry %></div>
            <div>Created on: <%= cust.date_created.toISOString().split('T')[0] %></div>
          <div>
            <a class="btn btn-outline-primary" href="<%= '/customers/' + cust.customer_id + '/edit' %>">Edit</a>
            <a class="btn btn-outline-danger" href="<%= '/customers/' + cust.customer_id + '/delete' %>">Delete</a>
          </div>
        </div>
      </div>
    </div>


  <% } %>

  <%- include('../components/pagination', {
    pageName: 'customers',
    currentPage: currentPage,
    lastPage: lastPage
  }) %>

</div>
